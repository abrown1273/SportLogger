@model SportLogger.Models.SkiDay

@{
    ViewData["Title"] = "Create Ski Day";
    
}

<h2>Create</h2>

<form id="create" asp-action="Create">
    <div class="form-horizontal">
        <h4>Ski Day</h4>
        <hr />
       
        <div class="form-group">
            <label asp-for="SkiDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">

                <div class="input-group">
                    <input asp-for="SkiDate" id="datetimepicker" autocomplete="off" type="text" class="form-control">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                </div>
                <span asp-validation-for="SkiDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Resort" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Resort" class="form-control" asp-items="@ViewBag.ResortList"></select>
                <span asp-validation-for="Resort" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Vertical" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Vertical" autocomplete="off" class="form-control" />
                <span asp-validation-for="Vertical" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Partners" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Partners" class="form-control" />
                <span asp-validation-for="Partners" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewSnow24" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewSnow24" autocomplete="off" class="form-control" />
                <span asp-validation-for="NewSnow24" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewSnow72" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewSnow72" autocomplete="off" class="form-control" />
                <span asp-validation-for="NewSnow72" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Temperature" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Temperature" autocomplete="off" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                
                <button id="showModal" type="button" class="btn btn-primary">Submit</button>

            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal-label">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModal-label">Ski Day Confirmation</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

<div>

    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
<script type="text/javascript">
    $('#datetimepicker').datetimepicker({
        timepicker: false,
        format: 'm/d/Y'
    });

    $(function () {
        var showModal = function (evt) {
            evt.preventDefault();
            var $form = $('#create');
            if ($form.valid()) {
                $("#myModal").modal("show")
                    .draggable({
                        handle: ".modal-header"
                    });
            }
        };
        $("#showModal").click(showModal);
    });

</script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

