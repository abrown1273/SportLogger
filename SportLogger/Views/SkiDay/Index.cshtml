@model IEnumerable<SportLogger.Models.SkiDay>

@{
    ViewData["Title"] = "Ski Day List";
}

<h2>Ski Days</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SkiDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Resort)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vertical)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Partners)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewSnow24)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewSnow72)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Temperature)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SkiDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vertical)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Partners)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewSnow24)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewSnow72)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
